        lib/console.c          \
        drivers/kbd.c          \
        drivers/membuf.c       \
        drivers/uart_8250.c    \

# use in-memory disk
HV6_FS_SRCS +=                 \
        hv6/user/fs/memdisk.c  \
        hv6/user/fs/memfs.S    \

# use nvme disk
HV6_FS_SRCS +=                 \
        hv6/user/fs/nvmedisk.c \

HV6_INIT_SRCS :=               \
        hv6/user/init.c        \
        hv6/user/initcode.S    \
        $(HV6_FS_SRCS)

HV6_INIT_OBJS := $(addprefix $(O)/,$(patsubst %.c,%.o,$(patsubst %.S,%.o,$(HV6_INIT_SRCS))))

HV6_ULIB_SRCS :=                  \
        hv6/user/lib/exec.c       \
