HV6_FS_SRCS :=                 \
        hv6/user/fs/bio.c      \
        hv6/user/fs/file.c     \
        hv6/user/fs/fs.c       \
        hv6/user/fs/ide.c      \
        hv6/user/fs/inode.c    \
        hv6/user/fs/log.c      \
