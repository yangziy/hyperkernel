        hv6/user/lib/ubrk.c       \
        hv6/user/lib/umalloc.c    \
        hv6/user/lib/readline.c   \
        hv6/user/lib/usys.S       \

HV6_ULIB_OBJS := $(addprefix $(O)/,$(patsubst %.c,%.o,$(patsubst %.S,%.o,$(HV6_ULIB_SRCS))))

HV6_UPROGS :=                       \
